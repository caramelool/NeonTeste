<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/neon_background</item>
        <item name="android:buttonStyle">@style/NeonButtonStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NeonButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/neon_button</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="NeonSendEditTextStyle" parent="android:Widget.Holo.EditText">
        <item name="android:background">@drawable/neon_bg_send_edittext</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/persian_green</item>
        <item name="android:textSize">26sp</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

</resources>
